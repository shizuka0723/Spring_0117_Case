<%@page import="java.util.Map"%>
<%@page import="java.util.LinkedHashMap"%>
<%@ page pageEncoding="UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>
<%@ taglib prefix = "fn" uri = "http://java.sun.com/jsp/jstl/functions" %>

<div id="menu">
    <div class="pure-menu">
        <a class="pure-menu-heading" href="/case/sales/">Sales</a>

        <ul class="pure-menu-list">
            <c:forEach var="m" items="${menus}">
                <!-- pure-menu-item menu-item-divided pure-menu-selected -->
                <li class="${fn:contains(pageContext.request.requestURI, m.getKey()) ? 'pure-menu-item menu-item-divided pure-menu-selected' : 'pure-menu-item'}">
                    <a href="${pageContext.request.contextPath}${m.getValue()[0]}" class="pure-menu-link">
                        ${m.getValue()[1]}
                    </a>
                </li>
            </c:forEach>    
        </ul>
    </div>
</div>